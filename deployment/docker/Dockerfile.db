FROM postgres:13

# Install pg_cron
RUN apt-get update && \
    apt-get install -y postgresql-13-cron && \
    rm -rf /var/lib/apt/lists/*

# Configure pg_cron in the main postgresql.conf
RUN echo "shared_preload_libraries = 'pg_cron'" >> /usr/share/postgresql/postgresql.conf.sample && \
    echo "cron.database_name = 'pulseplus'" >> /usr/share/postgresql/postgresql.conf.sample

# Create necessary directories
RUN mkdir -p /docker-entrypoint-initdb.d

# Copy initialization scripts
COPY ./backend/database/init.sh /docker-entrypoint-initdb.d/01-init.sh
COPY ./backend/database/pulseplus-optimized-schema.sql /docker-entrypoint-initdb.d/02-schema.sql
COPY ./backend/database/pulseplus-optimized-synthetic-data.sql /docker-entrypoint-initdb.d/03-data.sql

# Make scripts executable and ensure proper permissions
RUN chmod +x /docker-entrypoint-initdb.d/*.sh && \
    chown -R postgres:postgres /docker-entrypoint-initdb.d

# Create directory for init marker file
RUN mkdir -p /docker-entrypoint-initdb.d/.init-db && \
    chown -R postgres:postgres /docker-entrypoint-initdb.d/.init-db 