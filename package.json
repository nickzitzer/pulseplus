{
  "name": "pulseplus",
  "version": "1.0.0",
  "scripts": {
    "start": "npm run sync-env && concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd frontend && npm run dev",
    "start:backend": "cd backend && npm start",
    "install": "concurrently \"cd frontend && npm install\" \"cd backend && npm install\"",
    "rebuild-db": "npm run sync-docker-env && docker-compose -f deployment/docker/compose/docker-compose.yml run --rm db-rebuild",
    "generate-env": "node scripts/generate-env.js",
    "sync-env": "node scripts/sync-env.js",
    "sync-docker-env": "node scripts/sync-docker-env.js",
    "sync-all-env": "npm run sync-env && npm run sync-docker-env",
    "deploy": "npm run sync-docker-env && cd deployment/aws && cdk deploy --app 'npx ts-node --prefer-ts-exts bin/pulseplus.ts'",
    "push-images": "npm run sync-docker-env && bash deployment/scripts/push-images.sh",
    "bootstrap": "cd deployment/aws && cdk bootstrap aws://211125677151/us-east-1",
    "deploy:all": "npm run push-images && npm run deploy",
    "docker:up": "npm run sync-docker-env && docker-compose -f deployment/docker/compose/docker-compose.yml up",
    "docker:down": "docker-compose -f deployment/docker/compose/docker-compose.yml down",
    "docker:build": "npm run sync-docker-env && docker-compose -f deployment/docker/compose/docker-compose.yml build",
    "docker:restart": "npm run docker:down && npm run docker:up",
    "docs:generate": "jsdoc -c documentation/jsdoc/jsdoc.config.json",
    "docs:dev": "npm run docs:generate && next dev",
    "generate-master-key": "node scripts/generate-master-key.js",
    "encrypt-config": "node scripts/encrypt-config.js",
    "config:history": "node scripts/view-config-history.js",
    "config:compare": "node scripts/view-config-history.js compare",
    "security:scan": "node scripts/security-scan.js --all",
    "security:scan:snyk": "node scripts/security-scan.js --snyk",
    "security:scan:zap": "node scripts/security-scan.js --zap",
    "security:scan:sonarqube": "node scripts/security-scan.js --sonarqube",
    "security:scan:report-only": "node scripts/security-scan.js --all --report-only",
    "precommit": "npm run lint && npm run security:scan:snyk --report-only"
  },
  "devDependencies": {
    "@types/node": "^22.5.2",
    "better-docs": "^2.7.3",
    "concurrently": "^6.2.0",
    "jsdoc": "^4.0.4",
    "snyk": "^1.1130.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "aws-cdk": "^2.155.0",
    "aws-cdk-lib": "^2.155.0",
    "aws-sdk": "^2.1450.0",
    "constructs": "^10.3.0",
    "dotenv": "^16.4.7",
    "ioredis": "^5.5.0",
    "joi": "^17.12.2",
    "nextra": "^4.2.13"
  }
}
